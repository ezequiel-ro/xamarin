<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Agenda.Views.Login">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="50" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Image Grid.Row="1" HorizontalOptions="Center" VerticalOptions="Center" Source="agenda.png" Margin="70, 0, 70, 15"/>
            <Button Grid.Row="2" Text="Entrar com Facebook" Clicked="LoginFacebook" BackgroundColor="#3c5a98" TextColor="White" HeightRequest="35" Margin="0, 10, 0, 0"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>